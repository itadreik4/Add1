<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background2x" app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0"/>

    <ImageView
        android:id="@+id/score_image"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/score2x" />

    <ImageView
        android:id="@+id/time_image"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/time2x" />

    <ImageView
        android:id="@+id/number_image"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_image"
        app:srcCompat="@drawable/number2x" />

    <EditText
            android:id="@+id/editText"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="@drawable/input2x"
            android:ems="10"
            android:inputType="number"
            android:maxLength="4"
            android:textAlignment="center"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/number_text"/>

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/score_image"
        app:layout_constraintEnd_toEndOf="@+id/score_image"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/score_image"
        app:layout_constraintTop_toTopOf="@+id/score_image" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:00"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/time_image"
        app:layout_constraintEnd_toEndOf="@+id/time_image"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toStartOf="@+id/time_image"
        app:layout_constraintTop_toTopOf="@+id/time_image"
        app:layout_constraintVertical_bias="0.467" />

    <TextView
        android:id="@+id/number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/number_image"
        app:layout_constraintEnd_toEndOf="@+id/number_image"
        app:layout_constraintStart_toStartOf="@+id/number_image"
        app:layout_constraintTop_toTopOf="@+id/number_image" />
    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reset_button"
        android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/number_text"
        app:layout_constraintEnd_toEndOf="@+id/number_image" app:layout_constraintStart_toStartOf="@+id/number_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>
